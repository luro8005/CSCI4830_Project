<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_day_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.realc.jar.DayTasks">\

    <TextView
        android:text="@string/today_string"
        android:textSize="40sp"
        android:layout_marginTop="0sp"
        android:layout_width="300sp"
        android:layout_height="50sp" />

    <CheckBox
        android:text="6:00am"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:id="@+id/checkBox4" />

    <CheckBox
        android:text="8:00am"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="126dp"
        android:id="@+id/checkBox5" />

    <CheckBox
        android:text="12:00pm"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="176dp"
        android:id="@+id/checkBox6" />

    <CheckBox
        android:text="3:00pm"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="226dp"
        android:id="@+id/checkBox7" />

    <CheckBox
        android:text="5:00pm"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="276dp"
        android:id="@+id/checkBox8" />

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="SpecTask1"/>

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="SpecTask2"/>

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="SpecTask3"/>

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="SpecTask4"/>

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="SpecTask5"/>

</RelativeLayout>
